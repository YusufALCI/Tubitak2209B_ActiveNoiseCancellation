/* Private includes ----------------------------------------------------------*/
/* USER CODE BEGIN Includes */
#include <string.h>
#include "usbd_cdc_if.h"
#include "arm_math.h"
#include <math.h>
/* USER CODE END Includes */

/* Private typedef -----------------------------------------------------------*/
/* USER CODE BEGIN PTD */

/* USER CODE END PTD */

/* Private define ------------------------------------------------------------*/
/* USER CODE BEGIN PD */
/* SİSTEM PARAMETRELERİ
 * ---------------------------------------------------------
 * I2S_BUFFER_SIZE: 128
 * - DMA'nın doldurduğu ham veri deposu.
 * - Yarısı (64) dolunca kesme üretir.
 *
 * NUM_SAMPLES: 32
 * - Bir seferde işlenen ses
 * - 32kHz örneklemede 32 örnek = 1 milisaniye gecikme
 *
 * INV_MAX_24BIT: 1.0 / 8388608.0
 * - Tamsayıyı (8 milyon küsür) Float'a (1.0) çeviren çarpan.
 */
#define I2S_BUFFER_SIZE         128
#define NUM_SAMPLES             32
#define SOF_WORD                0x55AA
#define EOF_BYTE                0x0A
#define INV_MAX_24BIT           1.1920928955078125e-7f
#define BLOCK_SIZE              NUM_SAMPLES
/* USER CODE END PD */

/* Private macro -------------------------------------------------------------*/
/* USER CODE BEGIN PM */

/* USER CODE END PM */

/* Private variables ---------------------------------------------------------*/

COM_InitTypeDef BspCOMInit;

I2S_HandleTypeDef hi2s1;
I2S_HandleTypeDef hi2s3;
DMA_HandleTypeDef hdma_spi1_rx;
DMA_HandleTypeDef hdma_spi3_tx;

/* USER CODE BEGIN PV */
// I2S DMA buffer
// DMA bu diziyi arka planda sürekli doldurur (Circular Mode)
int32_t i2s_rx_buffer[I2S_BUFFER_SIZE] __attribute__((aligned(32)));

// İşaretçi (Pointer) - O an hangi yarıyı işlediğimizi gösterir
volatile int32_t* volatile active_buffer = NULL;

/* USB PACKET STRUCTURE & MEMORY ALIGNMENT EXPLANATION
 * ---------------------------------------------------------------------------
 * 1. __attribute__((packed)):
 * Derleyiciye "Değişkenler arasına boşluk (padding) koyma" der.
 * - Neden? PC yazılımı (C#/Python) veriyi byte-byte okurken aradaki
 * boşlukları ses verisi sanıp yanlış yorumlamasın diye.
 * - Sonuç: Struct boyutu tam olarak içindeki değişkenlerin toplamı olur.
 *
 * 2. __attribute__((aligned(4))):
 * Derleyiciye "Bu değişkeni RAM'de 4'ün katı olan bir adrese koy" der.
 * - Neden? STM32 USB donanımı (DMA), veriyi bellekten okurken
 * adresin hizalı olmasını (32-bit alignment) şart koşar.
 * - Sonuç: Donanım hatası (Hard Fault) veya veri bozulması önlenir.
 *
 * 3. Protokol Yapısı (Zarf Mantığı):
 * - SOF (0x55AA): Paketin başlangıcı (Senkronizasyon için).
 * - EOF (0x0A):   Paketin bitişi (Veri bütünlüğü kontrolü için).
 */
typedef struct __attribute__((packed)) {
    uint16_t sof;
    float samples[NUM_SAMPLES];
    uint8_t eof;
} usb_packet_t;
usb_packet_t usb_packet __attribute__((aligned(4)));

// İşleme Tamponları (Hızlı Erişim için Aligned 4)
float32_t input_buffer[BLOCK_SIZE] __attribute__((aligned(4)));
float32_t output_buffer[BLOCK_SIZE] __attribute__((aligned(4)));
float32_t temp_buffer[BLOCK_SIZE] __attribute__((aligned(4)));

// DC offset removal (Sinyal Merkezleme)
float32_t dc_offset = 0.0f;
const float32_t DC_ALPHA = 0.999f;

// Normalization parameters (Otomatik Kazanç)
const float32_t TARGET_PEAK = 0.9f;     // Hedeflenen ses yüksekliği (Max 1.0)
const float32_t MAX_GAIN = 50.0f;       // Sessizliği çok yükseltip gürültü yapmasın diye sınır
const float32_t MIN_SIGNAL = 0.0001f;   // Sinyal yoksa işlem yapma eşiği
/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
static void MPU_Config(void);
static void MX_GPIO_Init(void);
static void MX_DMA_Init(void);
static void MX_I2S1_Init(void);
static void MX_I2S3_Init(void);
/* USER CODE BEGIN PFP */
void audio_init(void);
void i2s_to_float(int32_t* i2s_data, float32_t* float_data, uint32_t num_samples);
void remove_dc_offset(float32_t* data, uint32_t num_samples);
void normalize_audio(float32_t* input, float32_t* output, uint32_t num_samples);
void send_usb_packet(float32_t* data, uint32_t num_samples);
void process_audio_block(void);
/* USER CODE END PFP */

/* Private user code ---------------------------------------------------------*/
/* USER CODE BEGIN 0 */

/**
 * @brief  Ses işleme bileşenlerini sıfırlar
 */
void audio_init(void)
{
    // DC ofset başlangıç değerini sıfırla
    dc_offset = 0.0f;
}

/* VERİ DÖNÜŞÜMÜ VE HİZALAMA (Bit-Shifting Magic)
 * ---------------------------------------------------------------------------
 * Mikrofondan gelen veri 32-bit slot içine yerleşmiş 24-bit veridir.
 * Ancak I2S donanımı bunu "Sola Dayalı" (Left Aligned) yerleştirir.
 * Örnek (Binary): [SES VERİSİ 24-BIT] [00000000]
 *
 * Bizim bunu matematiksel olarak doğru okumamız için sağa 8 bit kaydırmamız gerekir.
 * Sonuç (Binary): [00000000] [SES VERİSİ 24-BIT]
 *
 * Daha sonra bu tamsayıyı (Integer), -1.0 ile +1.0 arasında bir Float sayıya
 * dönüştürürüz (Normalization).
 */
__attribute__((optimize("O3")))
void i2s_to_float(int32_t* i2s_data, float32_t* float_data, uint32_t num_samples)
{
    for (uint32_t i = 0; i < num_samples; i++)
    {
        // 1. Stereo veriden (Sol/Sağ) sadece Sol kanalı al (i * 2)
        int32_t raw = i2s_data[i * 2];

        // 2. Hizalama düzeltmesi: Çöp bitlerden kurtulmak için sağa kaydır
        raw = raw >> 8;

        // 3. Float dönüşümü: Tamsayıyı 1.0 aralığına sıkıştır
        float_data[i] = (float32_t)raw * INV_MAX_24BIT;
    }
}

/* DC OFFSET TEMİZLEME (Sinyal Merkezleme)
 * ---------------------------------------------------------------------------
 * Mikrofonlar bazen sessizlik anında bile "0" yerine "0.05" gibi sabit
 * bir voltaj (DC Bias) üretir. Bu durum:
 * 1. Hoparlörde "pop" sesine neden olur.
 * 2. Sinyalın tavan yapmasını (clipping) kolaylaştırır.
 *
 * Bu fonksiyon sinyalin ortalamasını bulur ve her örnekten çıkararak
 * dalgayı tam 0 noktasına oturtur.
 */
__attribute__((optimize("O3")))
void remove_dc_offset(float32_t* data, uint32_t num_samples)
{
    // Bloğun ortalamasını hesapla
    float32_t block_mean;
    arm_mean_f32(data, num_samples, &block_mean);

    // Hareketli ortalama (Exponential Moving Average) ile DC seviyesini takip et
    dc_offset = DC_ALPHA * dc_offset + (1.0f - DC_ALPHA) * block_mean;

    // Her örnekten DC ofseti çıkar
    arm_offset_f32(data, -dc_offset, data, num_samples);
}

/* SES NORMALİZASYONU (Akıllı Ses Yükseltme)
 * ---------------------------------------------------------------------------
 * Gelen ses çok kısıksa yükseltir, çok yüksekse kısar.
 * Mantık:
 * 1. Paketteki en yüksek ses seviyesini (Peak) bul.
 * 2. Hedef seviyeye (0.9) ulaşmak için ne kadar çarpmak gerektiğini hesapla.
 * 3. Tüm paketi bu katsayı (Gain) ile çarp.
 */
__attribute__((optimize("O3")))
void normalize_audio(float32_t* input, float32_t* output, uint32_t num_samples)
{
    // Maksimum mutlak değeri bul
    float32_t max_abs;
    uint32_t max_index;

    arm_abs_f32(input, temp_buffer, num_samples);
    arm_max_f32(temp_buffer, num_samples, &max_abs, &max_index);
    float32_t gain = 1.0f;

    if (max_abs > MIN_SIGNAL)
    {
        // Kazancı hesapla ama sonsuza gitmesini engelle (MAX_GAIN limiti)
        gain = fminf(TARGET_PEAK / max_abs, MAX_GAIN);
    }

    // Sesi yükselt/alçalt
    arm_scale_f32(input, gain, output, num_samples);
}

/**
 * @brief  Hazırlanan paketi USB üzerinden PC'ye yollar
 */
__attribute__((optimize("O3")))
void send_usb_packet(float32_t* data, uint32_t num_samples)
{
    // Zarfı hazırla: Başlangıç İşareti
    usb_packet.sof = SOF_WORD;

    // Mektubu koy: Ses verileri
    for (uint32_t i = 0; i < num_samples; i++)
    {
        usb_packet.samples[i] = data[i];
    }

    // Zarfı kapat: Bitiş İşareti
    usb_packet.eof = EOF_BYTE;

    // Kargoya ver (USB High Speed)
    CDC_Transmit_HS((uint8_t*)&usb_packet, sizeof(usb_packet));
}


/**
 * @brief  Ana Ses İşleme Hattı (Pipeline)
 * Bu fonksiyon Main Loop içinde çağrılır.
 */
__attribute__((optimize("O3")))
void process_audio_block(void)
{
    int32_t* i2s_source = (int32_t*)active_buffer;

    // Adım 1: I2S -> Float (Veriyi okunabilir hale getir)
    i2s_to_float(i2s_source, input_buffer, NUM_SAMPLES);
    // Adım 2: DC Offset Sil (Sinyali merkeze çek)
    remove_dc_offset(input_buffer, NUM_SAMPLES);
    // Adım 3: Normalize Et (Ses seviyesini optimize et)
    normalize_audio(input_buffer, output_buffer, NUM_SAMPLES);
    // Adım 4: USB ile Gönder
    send_usb_packet(output_buffer, NUM_SAMPLES);

    // İşlem bitti, tamponu serbest bırak (Bir sonraki DMA kesmesini bekle)
    active_buffer = NULL;
}

/* USER CODE END 0 */

/**
  * @brief  The application entry point.
  * @retval int
  */
int main(void)
{

  /* USER CODE BEGIN 1 */

  /* USER CODE END 1 */

  /* MPU Configuration--------------------------------------------------------*/
  MPU_Config();

  /* MCU Configuration--------------------------------------------------------*/

  /* Reset of all peripherals, Initializes the Flash interface and the Systick. */
  HAL_Init();

  /* USER CODE BEGIN Init */

  /* USER CODE END Init */

  /* Configure the system clock */
  SystemClock_Config();

  /* USER CODE BEGIN SysInit */

  /* USER CODE END SysInit */

  /* Initialize all configured peripherals */
  MX_GPIO_Init();
  MX_DMA_Init();
  MX_I2S1_Init();
  MX_USB_DEVICE_Init();
  MX_I2S3_Init();
  /* USER CODE BEGIN 2 */
    // Ses değişkenlerini başlat
    audio_init();

    // DMA'yı Başlat:
    // Mikrofon verisini "i2s_rx_buffer"a durmaksızın (Circular) yazmaya başla.
    if (HAL_I2S_Receive_DMA(&hi2s1, (uint16_t*)i2s_rx_buffer, I2S_BUFFER_SIZE) != HAL_OK)
    {
        Error_Handler();
    }
  /* USER CODE END 2 */

  /* Initialize leds */
  BSP_LED_Init(LED_GREEN);
  BSP_LED_Init(LED_YELLOW);
  BSP_LED_Init(LED_RED);

  /* Initialize USER push-button, will be used to trigger an interrupt each time it's pressed.*/
  BSP_PB_Init(BUTTON_USER, BUTTON_MODE_EXTI);

  /* Initialize COM1 port (115200, 8 bits (7-bit data + 1 stop bit), no parity */
  BspCOMInit.BaudRate   = 115200;
  BspCOMInit.WordLength = COM_WORDLENGTH_8B;
  BspCOMInit.StopBits   = COM_STOPBITS_1;
  BspCOMInit.Parity     = COM_PARITY_NONE;
  BspCOMInit.HwFlowCtl  = COM_HWCONTROL_NONE;
  if (BSP_COM_Init(COM1, &BspCOMInit) != BSP_ERROR_NONE)
  {
    Error_Handler();
  }

  /* Infinite loop */
  /* USER CODE BEGIN WHILE */
  while (1)
  {
    /* USER CODE END WHILE */

    /* USER CODE BEGIN 3 */
      // Eğer DMA bir tamponu doldurduysa (Bayrak kalktıysa)
      if (active_buffer != NULL)
      {
          // Sesi işle ve gönder
          process_audio_block();
      }
  }
  /* USER CODE END 3 */
}

/**
  * @brief System Clock Configuration
  * @retval None
  */
void SystemClock_Config(void)
{
  RCC_OscInitTypeDef RCC_OscInitStruct = {0};
  RCC_ClkInitTypeDef RCC_ClkInitStruct = {0};

  /** Supply configuration update enable
  */
  HAL_PWREx_ConfigSupply(PWR_LDO_SUPPLY);

  /** Configure the main internal regulator output voltage
  */
  __HAL_PWR_VOLTAGESCALING_CONFIG(PWR_REGULATOR_VOLTAGE_SCALE0);

  while(!__HAL_PWR_GET_FLAG(PWR_FLAG_VOSRDY)) {}

  /** Initializes the RCC Oscillators according to the specified parameters
  * in the RCC_OscInitTypeDef structure.
  */
  RCC_OscInitStruct.OscillatorType = RCC_OSCILLATORTYPE_HSI48|RCC_OSCILLATORTYPE_HSE;
  RCC_OscInitStruct.HSEState = RCC_HSE_ON;
  RCC_OscInitStruct.HSI48State = RCC_HSI48_ON;
  RCC_OscInitStruct.PLL.PLLState = RCC_PLL_ON;
  RCC_OscInitStruct.PLL.PLLSource = RCC_PLLSOURCE_HSE;
  RCC_OscInitStruct.PLL.PLLM = 1;
  RCC_OscInitStruct.PLL.PLLN = 68;
  RCC_OscInitStruct.PLL.PLLP = 1;
  RCC_OscInitStruct.PLL.PLLQ = 3;
  RCC_OscInitStruct.PLL.PLLR = 2;
  RCC_OscInitStruct.PLL.PLLRGE = RCC_PLL1VCIRANGE_3;
  RCC_OscInitStruct.PLL.PLLVCOSEL = RCC_PLL1VCOWIDE;
  RCC_OscInitStruct.PLL.PLLFRACN = 6144;
  if (HAL_RCC_OscConfig(&RCC_OscInitStruct) != HAL_OK)
  {
    Error_Handler();
  }

  /** Initializes the CPU, AHB and APB buses clocks
  */
  RCC_ClkInitStruct.ClockType = RCC_CLOCKTYPE_HCLK|RCC_CLOCKTYPE_SYSCLK
                              |RCC_CLOCKTYPE_PCLK1|RCC_CLOCKTYPE_PCLK2
                              |RCC_CLOCKTYPE_D3PCLK1|RCC_CLOCKTYPE_D1PCLK1;
  RCC_ClkInitStruct.SYSCLKSource = RCC_SYSCLKSOURCE_PLLCLK;
  RCC_ClkInitStruct.SYSCLKDivider = RCC_SYSCLK_DIV1;
  RCC_ClkInitStruct.AHBCLKDivider = RCC_HCLK_DIV2;
  RCC_ClkInitStruct.APB3CLKDivider = RCC_APB3_DIV2;
  RCC_ClkInitStruct.APB1CLKDivider = RCC_APB1_DIV2;
  RCC_ClkInitStruct.APB2CLKDivider = RCC_APB2_DIV2;
  RCC_ClkInitStruct.APB4CLKDivider = RCC_APB4_DIV2;

  if (HAL_RCC_ClockConfig(&RCC_ClkInitStruct, FLASH_LATENCY_3) != HAL_OK)
  {
    Error_Handler();
  }
}

